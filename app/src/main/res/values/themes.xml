<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFilimoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- رنگ اصلی روی ویوهامون -->
        <item name="colorPrimary">@color/purple_200</item>
        <!-- رنگ استاتوس بار -->
        <item name="colorPrimaryDark">@color/chineseBlack</item>
        <item name="colorAccent">@color/white</item>
        <!-- Secondary brand color. -->
        <!-- رنگ هایی که بعضی ویو هامون مثل پروگرس بار یا خطوطی که زیر ادیت تکست ها میاد به نشانه select شدن اون فیلد است -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- چون روی کل پس زمینه هامون میخوایم اعمال شه دیگه background نمیزنیم براشون اینجا اومدیم یک رنگی که میخواهیم پس زمینه بک گراند همه ui هامون باشه set می کنیم -->
        <item name="android:windowBackground">@color/chineseBlack</item>
        <!--این style رو ایجاد کردیم برای text های تمام اپ مون که همشون رو یه استایل شبیه هم بدیم و مشخصاتشون اینجوری باشه کافیه توو فایل xml هر text رو بهش با <style> فونت و مشخصات مورد نظرمونو  بدیم-->
    </style>
    <!--TextView-->
    <style name="TextViewLightStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>
    <!--TextInputLayout-->
    <!--ازMaterialComponents برای paret استفاده کن material3 اپ کرش می کنه -->
    <style name="CustomFilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/crayola</item>
        <item name="boxStrokeColor">@color/crayola</item>
        <!--رنگ پس زمینه فیلدمونه -->
        <item name="boxBackgroundColor">@color/gunmetal</item>
        <!--رنگ آیکن-->
        <item name="startIconTint">@color/philippineSilver</item>
    </style>
    <!--RoundedImageView-->
    <!--این استایل برای گرد کردن گوشه های عکس  -->
    <!--مورد دوم میگیم گرد بشه و مورد سوم میگیم چقدر گرد بشه-->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10mdp</item>
    </style>
</resources>